@model Blog.Models.TagSearch
@{
    ViewBag.Title = "Search by Tags";
}

<div class="container">
    <div class="well">
        <h2>@ViewBag.Title</h2>
        @using (Html.BeginForm("TagSearch", "Tag", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <hr />

            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.keyWordSearch, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.keyWordSearch, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Cancel", "ListCategories", "Home", null, new { @class = "btn btn-default" })
                    <input type="submit" value="Search" class="btn btn-success" />
                </div>
            </div>
        }
    </div>
</div>

